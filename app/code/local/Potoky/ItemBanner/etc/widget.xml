<?xml version="1.0"?>
<widgets>
    <itembanner_banner type="itembanner/banner" translate="name description" module="itembanner">
            <name>Banner inserted into products</name>
            <description type="desc">Depending on set position appears in place of a product block in the product list or grid</description>
        <parameters>
            <image>
                <label>Image For Banner</label>
                <visible>1</visible>
                <required>0</required>
                <type>image</type>
                <note>*.jpg, *.png, *.gif</note>
            </image>
            <template translate="label">
                <label>Template</label>
                <visible>1</visible>
                <type>select</type>
                <value>itembanner.phtml</value>
                <values>
                    <default translate="label">
                        <value>itembanner.phtml</value>
                        <label>Itembanner Block Default Template</label>
                    </default>
                </values>
                <sort_order>10</sort_order>
            </template>
        </parameters>
    </itembanner_banner>
</widgets>