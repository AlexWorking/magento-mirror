<?xml version="1.0"?>
<config>
    <modules>
        <Potoky_ItemBanner>
            <version>0.1.0</version>
        </Potoky_ItemBanner>
    </modules>
    <global>
        <blocks>
            <itembanner>
                <class>Potoky_ItemBanner_Block</class>
            </itembanner>
            <widget>
                <rewrite>
                    <adminhtml_widget_instance_edit_tab_properties>Potoky_ItemBanner_Block_Adminhtml_Widget_Instance_Edit_Tab_Properties</adminhtml_widget_instance_edit_tab_properties>
                </rewrite>
            </widget>
        </blocks>
        <helpers>
            <itembanner>
                <class>Potoky_ItemBanner_Helper</class>
            </itembanner>
        </helpers>
        <models>
            <itembanner>
                <class>Potoky_ItemBanner_Model</class>
                <resourceModel>itembanner_resource</resourceModel>
            </itembanner>
            <itembanner_resource>
                <class>Potoky_ItemBanner_Model_Resource</class>
                <entities>
                    <bannerinfo>
                        <table>banner_info</table>
                    </bannerinfo>
                </entities>
            </itembanner_resource>
        </models>
        <resources>
            <itembanner_setup>
                <setup>
                    <module>Potoky_ItemBanner</module>
                </setup>
            </itembanner_setup>
        </resources>
    </global>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <itembanner before="Mage_Widget">Potoky_ItemBanner_Adminhtml</itembanner>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <itembanner>
                    <file>itembanner.xml</file>
                </itembanner>
            </updates>
        </layout>
        <events>
            <widget_widget_instance_save_before>
                <observers>
                    <additional_before_save_actions>
                        <type>singleton</type>
                        <class>Potoky_ItemBanner_Model_Observer</class>
                        <method>additionalBeforeSave</method>
                    </additional_before_save_actions>
                </observers>
            </widget_widget_instance_save_before>
            <widget_widget_instance_save_after>
                <observers>
                    <itembanner_info_to_db>
                        <type>singleton</type>
                        <class>Potoky_ItemBanner_Model_Observer</class>
                        <method>registerInfoToDb</method>
                    </itembanner_info_to_db>
                </observers>
            </widget_widget_instance_save_after>
        </events>
    </adminhtml>
    <frontend>
        <events>
            <controller_action_layout_generate_blocks_after>
                <observers>
                    <template_only_to_active>
                        <type>singleton</type>
                        <class>Potoky_ItemBanner_Model_Observer</class>
                        <method>removeNoDisplayBanners</method>
                    </template_only_to_active>
                </observers>
            </controller_action_layout_generate_blocks_after>
        </events>
    </frontend>
</config>